<!DOCTYPE html>
<html>
<head>
  <title>NFC Reader</title>
</head>
<body>
  <button id="startButton">Start NFC Reader</button>
  <div id="output"></div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/nfcpy/1.0.3/nfcpy.min.js"></script>
  <script>
    // Function to handle NFC data
    function handleNFCData(data) {
      // Process the NFC data
      $('#output').text(data);
    }

    // Function to start the NFC reader
    function startNFCReader() {
      // Check if NFC is supported
      if ('NDEFReader' in window) {
        // Start the NFC reader
        const reader = new NDEFReader();
        reader.onreading = event => {
          handleNFCData(event.message.records[0].data);
        };
        reader.onerror = error => {
          console.log(`Error: ${error}`);
        };
        reader.scan();
        $('#startButton').prop('disabled', true);
      } else {
        alert('NFC is not supported on this device.');
      }
    }

    // Event listener for the start button
    $('#startButton').click(startNFCReader);
  </script>
</body>
</html>
